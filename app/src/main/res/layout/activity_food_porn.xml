<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    tools:context=".FoodPornActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/comida"
        android:textColor="#EDE8E8"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buttonpizza"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/food"
        android:contentDescription="@string/pizza"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:srcCompat="@drawable/food" />

    <ImageButton
        android:id="@+id/buttonCostillas"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/meat"
        android:contentDescription="@string/costillas"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/buttonpizza"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:srcCompat="@drawable/meat" />

    <TextView
        android:id="@+id/textViewdescripcion"
        android:layout_width="380dp"
        android:layout_height="140dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="52dp"
        android:hint="@string/pulsa_la_comida_que_mas_te_guste"
        android:textColor="#ECE7E7"
        android:textColorHint="#E4DCDC"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/buttonHamburguesa"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/hamburguesa"
        android:contentDescription="@string/hamburguesa"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/buttonCostillas"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:srcCompat="@drawable/hamburguesa" />

    <ImageButton
        android:id="@+id/buttonNachos"
        android:layout_width="120dp"
        android:layout_height="69dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/nachos"
        android:contentDescription="@string/nachos"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPadthai"
        app:srcCompat="@drawable/nachos" />

    <ImageButton
        android:id="@+id/buttonSushi"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sushi"
        android:contentDescription="@string/sushi"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonpizza"
        app:srcCompat="@drawable/sushi" />

    <ImageButton
        android:id="@+id/buttonPerrito"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/hotdog"
        android:contentDescription="@string/perrito"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/buttonSushi"
        app:layout_constraintTop_toBottomOf="@+id/buttonCostillas"
        app:srcCompat="@drawable/hotdog" />

    <ImageButton
        android:id="@+id/buttonTaco"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rollo"
        android:contentDescription="@string/taco"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/buttonPerrito"
        app:layout_constraintTop_toBottomOf="@+id/buttonHamburguesa"
        app:srcCompat="@drawable/rollo" />

    <ImageButton
        android:id="@+id/buttonSandwich"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sandwich"
        android:contentDescription="@string/sandwich"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/buttonNachos"
        app:layout_constraintTop_toBottomOf="@+id/buttonArroz"
        app:srcCompat="@drawable/sandwich" />

    <ImageButton
        android:id="@+id/buttonPadthai"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/padthai"
        android:contentDescription="@string/padthai"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSushi"
        app:srcCompat="@drawable/padthai" />

    <ImageButton
        android:id="@+id/buttonArroz"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/friedrice"
        android:contentDescription="@string/arroz"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/buttonPadthai"
        app:layout_constraintTop_toBottomOf="@+id/buttonPerrito"
        app:srcCompat="@drawable/friedrice" />

    <ImageButton
        android:id="@+id/buttonTarta"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/cake"
        android:contentDescription="@string/tarta"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/buttonArroz"
        app:layout_constraintTop_toBottomOf="@+id/buttonTaco"
        app:srcCompat="@drawable/cake" />

    <ImageButton
        android:id="@+id/buttonHeladoyGofre"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/helado"
        android:contentDescription="@string/helado"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/buttonSandwich"
        app:layout_constraintTop_toBottomOf="@+id/buttonTarta"
        app:srcCompat="@drawable/helado" />

</androidx.constraintlayout.widget.ConstraintLayout>